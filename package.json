{
  "name": "practicum-project-kitchen-node",
  "version": "1.0.0",
  "description": "practicum-project-kitchen on node",
  "main": "app.js",
  "scripts": {
    "start": "node ./app.js",
    "dev": "nodemon ./app.js",
    "swagger:gen": "node ./swagger/generator.js",
    "create:admin": "node ./helpers/createAdmin.js",
    "test": "newman run ./tests/api-tests.postman.json -e ./tests/env-api-tests.postman.json",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "stop": "lsof -ti :3000 | xargs kill",
    "docker:build": "docker-compose build",
    "docker:start": "docker-compose up -d",
    "docker:run": "docker-compose up -d --build",
    "docker:stop": "docker-compose stop -f"
  },
  "license": "ISC",
  "dependencies": {
    "cors": "2.7.1",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "express-jwt": "3.3.0",
    "express-session": "1.13.0",
    "jsonwebtoken": "7.1.9",
    "mongoose": "^6.3.5",
    "mongoose-unique-validator": "^3.1.0",
    "morgan": "1.7.0",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^3.0.0",
    "passport": "0.3.2",
    "passport-local": "1.0.0",
    "slug": "0.9.1",
    "swagger-autogen": "^2.21.3",
    "swagger-ui-express": "^4.4.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "newman": "^5.3.2",
    "nodemon": "^2.0.16"
  }
}
